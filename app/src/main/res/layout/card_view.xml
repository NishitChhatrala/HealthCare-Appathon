<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="#eeeeee"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:elevation="4dp"
        >


        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:src="@drawable/icon"
                android:id="@+id/image"/>
            />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_height="fill_parent"
                android:layout_width="150dp"
                android:layout_toRightOf="@+id/image"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">

                <TextView
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Mr.Ajay Mheta"
                    android:id="@+id/_name"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Othopadic"
                    android:id="@+id/_specialist"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="M.D//M.S"
                    android:id="@+id/_education"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="10 years"
                    android:id="@+id/_experience"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Civil hospital"
                    android:id="@+id/_hospital"/>
            </LinearLayout>

            <Button

                android:id="@+id/call"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_call_24dp"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginLeft="270dp"/>

            <Button
                android:id="@+id/msg"
                android:layout_marginLeft="270dp"
                android:layout_width="75dp"
                android:layout_marginTop="5dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_event_24dp"
                android:layout_below="@+id/call"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>